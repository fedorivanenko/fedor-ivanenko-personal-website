{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "files": {
    "includes": [
      "apps/web/**/*",
      "!apps/web/.next/**",
      "!apps/web/out/**",
      "!apps/web/build/**",
      "!apps/web/next-env.d.ts",
      "!.next/**",
      "!**/node_modules/**"
    ]
  },
  "formatter": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  }
}
